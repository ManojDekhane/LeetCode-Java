class Solution {
    public double minimumAverage(int[] nums) {
        double minAvg = Float.MAX_VALUE;

        Arrays.sort(nums);
        int n = nums.length;
        int left = 0, right = n-1;
        while (left < right) {
            double avg = (nums[left] + nums[right]) / 2.0;
            minAvg = Math.min(minAvg, avg);
            left++;
            right--;
        }

        return minAvg;
    }
}
