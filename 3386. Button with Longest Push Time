class Solution {
    public int buttonWithLongestTime(int[][] events) {
        int maxDuration = -1;
        int prevTime = 0;
        int answerButton = Integer.MAX_VALUE;

        for (int i = 0; i < events.length; i++) {
            int btn = events[i][0];
            int t = events[i][1];

            int duration;
            if (i == 0) {
                duration = t;
            } else {
                duration = t - prevTime;
            }

            if (duration > maxDuration) {
                maxDuration = duration;
                answerButton = btn;
            } else if (duration == maxDuration) {
                if (btn < answerButton) {
                    answerButton = btn;
                }
            }

            prevTime = t;
        }

        return answerButton;
    }
}
